[colors]
background = color_a
foreground = color_e
darkened = color_e
special = color_e
urgent = color_e

[bar/main]
monitor = eDP1

width = 100%
height = 20

bottom = true

font-0 = scientifica:size=11;1

background = ${colors.background}
foreground = ${colors.foreground}

separator = "  -  "
padding = 2

modules-left = i3
modules-right = network volume battery date

workspace-label-current = "x " 
workspace-current-foreground = ${colors.special}

workspace-label-occupied = ∙
workspace-occupied-foreground = ${colors.darkened}

workspace-label-unoccupied = ⋅
workspace-unoccupied-foreground = ${colors.foreground}

[module/date]
type = internal/date

interval = 1.0

label = %date% : %time%

date = %a %d %b
time = %H:%M

[module/volume]
type = internal/volume

label-volume = VOL %percentage%
label-muted = MUT %percentage%

[module/temperature]
type = internal/temperature

warn-temperature = 80

label = TEMP %temperature%
label-warn = !TMP %temperature%

format-foreground = ${colors.special}
format-warn-foreground = ${colors.urgent}

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

poll-interval = 1

format-full = FULLBAT <label-full>
format-charging = BAT <animation-charging> <label-charging>
format-discharging = BAT DIS <label-discharging>

animation-charging-0 = :..
animation-charging-1 = .:.
animation-charging-2 = ..:
animation-charging-3 = ...
animation-charging-4 = ...

animation-charging-framerate = 100

[module/network]
type = internal/network
interface = wlp4s0

interval = 3.0
udspeed-minwidth = 0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %essid%
label-connected-foreground = color_e
label-disconnected = disconnected
label-disconnected-foreground = color_e

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
enable-scroll = false

label-unfocused-foreground = color_d
label-focused-foreground = color_e
label-urgent-foreground = color_e

; vim:ft=dosini
